{
  "compilerOptions": {
    /* ============ OUTPUT ============ */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "./",

    /* ============ FEATURES ============ */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    /* ============ STRICT MODE ============ */
    "strict": true,
    "skipLibCheck": true,

    /* ============ TYPES ============ */
    "types": ["node"]
  },

  "include": ["src/**/*.ts", "prisma/**/*.ts", "prisma/prisma.config.ts"],
  "exclude": ["node_modules", "dist"]
}
