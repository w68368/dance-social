// apps/api/prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

model User {
  id                   String          @id @default(cuid())
  email                String          @unique
  username             String          @unique
  passwordHash         String
  avatarUrl            String?
  failedLoginAttempts  Int             @default(0)
  lockUntil            DateTime?

  // ✅ Добавлено: когда e-mail подтверждён
  emailVerifiedAt      DateTime?

  // связь 1:N c RefreshToken
  refreshTokens        RefreshToken[]

  createdAt            DateTime        @default(now())
  updatedAt            DateTime        @updatedAt

  @@index([lockUntil])
}

model RefreshToken {
  id         String   @id @default(cuid())
  userId     String
  tokenHash  String   @unique
  userAgent  String?
  ip         String?
  createdAt  DateTime @default(now())
  expiresAt  DateTime
  revokedAt  DateTime?

  // связь к пользователю
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

//
// ✅ Новая таблица для e-mail подтверждений
//
model EmailVerification {
  id          String   @id @default(cuid())

  // email уникален – перезаписываем код при повторной отправке
  email       String   @unique

  // sha256-код, не храним реальный код
  codeHash    String

  // код живёт 10 минут
  expiresAt   DateTime

  // количество попыток ввода
  attempts    Int       @default(0)
  maxAttempts Int       @default(5)

  // Полезные данные перед созданием аккаунта:
  // { username, passwordHash, avatarTempPath }
  payload     Json

  createdAt   DateTime  @default(now())
}
