generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

model User {
  id                   String          @id @default(cuid())
  email                String          @unique
  username             String          @unique
  passwordHash         String
  avatarUrl            String?
  failedLoginAttempts  Int             @default(0)
  lockUntil            DateTime?

  // ✅ e-mail подтверждён
  emailVerifiedAt      DateTime?

  // ✅ Связь 1:N с refresh-токенами
  refreshTokens        RefreshToken[]

  // ✅ Связь 1:N с PasswordReset
  passwordResets       PasswordReset[]

  createdAt            DateTime        @default(now())
  updatedAt            DateTime        @updatedAt

  @@index([lockUntil])
}

model RefreshToken {
  id         String   @id @default(cuid())
  userId     String
  tokenHash  String   @unique
  userAgent  String?
  ip         String?
  createdAt  DateTime @default(now())
  expiresAt  DateTime
  revokedAt  DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

//
// ✅ Таблица для подтверждения e-mail
//
model EmailVerification {
  id          String    @id @default(cuid())

  // email уникален – при повторной отправке перезаписывается
  email       String    @unique

  // sha256-код (реальный код не храним)
  codeHash    String

  // срок действия кода (например, 10 минут)
  expiresAt   DateTime

  // число попыток ввода
  attempts    Int       @default(0)
  maxAttempts Int       @default(5)

  // полезные данные для будущего создания пользователя:
  // { username, passwordHash, avatarTempPath }
  payload     Json

  createdAt   DateTime  @default(now())
}

//
// ✅ Новая таблица для сброса пароля (Forgot / Reset)
//
model PasswordReset {
  id           String   @id @default(cuid())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String

  // ✅ Храним только хэш токена
  tokenHash    String   @unique

  // ⏳ Срок действия (обычно 30 минут)
  expiresAt    DateTime

  // ❗ Отметка, что токен уже использован (одноразовый)
  usedAt       DateTime?

  createdAt    DateTime @default(now())

  // IP / User-Agent с которого запросили восстановление
  requestedIp  String?
  requestedUA  String?

  @@index([expiresAt])
}
